<h1><strong>Rotten Mangoes</strong></h1>
<%= link_to "Submit a movie!", new_movie_path %>
<hr>
<%= form_tag movies_path, method: :get do %>
  <p>
    <%= label_tag "Search for movies:"  %><br>
    <%= text_field_tag :title, params[:title], placeholder: "Title" %>
    <%= submit_tag  "Search",:name => nil , class:"btn btn-success" %>
    <%= text_field_tag :director, params[:director], placeholder: "Director" %>
    <%= submit_tag  "Search",:name => nil , class:"btn btn-primary" %>
    <%= select_tag :Duration, options_for_select(["Under 90", "Between 90-120", "Over 120"]) %>
    <%= submit_tag  "Search",:name => nil , class:"btn btn-info" %>
  </p>
<% end %>

<% @movies.each do |movie| %><br>
  <%= link_to image_tag(movie.poster_image_url.thumb), movie_path(movie) %>
  <h2><%= link_to movie.title, movie_path(movie) %> | <%= movie.review_average %>/10</h2>
  <h3><%= formatted_date(movie.release_date) %></h3>
  <h4>Dir. <%= movie.director %> | <%= movie.runtime_in_minutes %> minutes</h4>
  <p><%= movie.description %></p>
  <hr>
<% end %>
