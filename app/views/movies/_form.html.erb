  <%= form_for @movie, multipart: true  do |f| %>
  <% if @movie.errors.any? %>
    <div>
      <%= pluralize(@movie.errors.count, "error") %> prevented this movie from being submitted:
      <ul>
        <% @movie.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-horizontal">
    <div class="form-group">
      <%= f.label "title", class:"col-sm-2 control-label"%>
      <%= f.text_field "title", class:"col-sm-7" %>
    </div>
    <div class="form-group">
      <%= f.label "release_date", class:"col-sm-2 control-label"%>
      <%= f.date_field "release_date", class:"col-sm-7" %>
    </div>
    <div class="form-group">
      <%= f.label "director", class:"col-sm-2 control-label"%>
      <%= f.text_field "director", class:"col-sm-7" %>
    </div>
    <div class="form-group">
      <%= f.label "runtime_in_minutes", class:"col-sm-2 control-label"%>
      <%= f.number_field "runtime_in_minutes", class:"col-sm-7" %>
    </div>
    <div class="form-group">
      <%= f.label "poster_image_url", class:"col-sm-2 control-label"%>
      <%= f.file_field :poster_image_url, class:"col-sm-7" %>
    </div>
    <!-- <div class="form-group">
      <% f.label "rating_out_of_ten", class:"col-sm-2 control-label"%>
      <%= f.file_field "rating_out_of_ten", class:"col-sm-7" %>
    </div> -->
    <div class="form-group">
      <%= f.label "description", class:"col-sm-2 control-label"%>
      <%= f.text_area "description", class:"col-sm-7" %>
    </div>
    <div class="form-group">
      <div class ="col-sm-2">
      </div>
      <div >
      <%= f.submit "Submit", class:"btn btn-success"%> 
      </div>
    </div>
  </div>
<% end %>

