  <%= form_for @movie, multipart: true  do |f| %>
  <% if @movie.errors.any? %>
    <div>
      <%= pluralize(@movie.errors.count, "error") %> prevented this movie from being submitted:
      <ul>
        <% @movie.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row">
    <div class="col-lg-4">
      <div class="form-group">
        <%= f.label "title" %><br>
        <%= f.text_field "title", placeholder: "Movie Title", :class => "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label "release_date"%><br>
        <%= f.date_field "release_date", placeholder: "YYYY-MM-DD", :class => "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label "director" %><br>
        <%= f.text_field "director", placeholder: "Director's Full Name", :class => "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label "runtime_in_minutes" %><br>
        <%= f.number_field "runtime_in_minutes", placeholder: "Lenght of Movie in Minutes", :class => "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label "poster_image_url" %><br>
        <%= f.file_field :poster_image_url, :class => "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label "description" %><br>
        <%= f.text_area "description", placeholder: "Tell us about the movie!", :class => "form-control" %>
      </div>
      <div class="form-group">
        <div >
        <%= f.submit "Submit", class:"btn btn-success"%> 
        </div>
      </div>
    </div>
  </div>
<% end %>


 