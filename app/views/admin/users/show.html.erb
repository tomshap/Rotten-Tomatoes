<div class="container">
  <div class="page-header">
    <h1>User Profile: <%= link_to @user.full_name, user_path(@user) %> (<%= link_to "edit", edit_admin_user_path(@user) %>, <%= link_to "delete", admin_user_path(@user), method: :delete, confirm: "Are you absolutely sure??" %>)</h1>
  </div>
</div>

<div class="container">
  <h3>First name: <%= @user.firstname %></h3>
  <h3>Last name: <%= @user.lastname %></h3>
  <h3>Email: <%= @user.email %></h3>
  <h3>Created at: <%= formatted_date(@user.created_at) %></h3>
  <h3>Updated at: <%= formatted_date(@user.updated_at) %></h3>
  <h3>Admin:
    <% if @user.admin? %>
      Yes
    <% else %>
      No
    <% end %>
  </h3>
  <hr>
</div>

<div class="container">
  <h3>Reviews posted by <%= @user.full_name %>:</h3>
  <div class="container">
    <% if !current_user.reviews.empty? %>
      <%= render partial: "reviews/review", collection: @user.reviews %>
    <% else %>
      <h4>This user hasn't posted any reviews.</h4>
    <% end %>
  </div>
</div>

<div class="container">
  <hr>
  <%= link_to "Back to all users", admin_users_path %><br/>
</div>
