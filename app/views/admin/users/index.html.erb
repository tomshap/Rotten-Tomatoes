<%= link_to "Create a new user", new_admin_user_path %><br>
<%= link_to "Back to all movies", movies_path %>

<% @users.each do |user| %>
  
  <h2><%= user.full_name %></h2>
  <h3><%= user.email %></h3>
  <h4><%= user.admin_user? ? "Admin" : "User" %></h4>
  <%= link_to "Edit",  edit_admin_user_path(user) %> |
  <%= link_to "Delete", admin_user_path(user), method: :delete, data: {confirm: "You sure?"}, title: "Delete #{user.full_name}" %>
  <% unless current_user == user %>
    | <%= link_to "Impersonate",  admin_impersonate_path(user) %>
  <% end %>
  <hr>
<% end %>